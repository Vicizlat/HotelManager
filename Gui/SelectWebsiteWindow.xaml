<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="Gui.SelectWebsiteWindow" mc:Ignorable="d"
        Title="SelectWebsiteWindow" SizeToContent="WidthAndHeight" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        BorderThickness="2" BorderBrush="#FFABADB3">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" FontSize="22" Text="Уебсайт за синхронизация:"/>
        <TextBox x:Name="Address" Grid.Row="1" Grid.Column="0" Padding="4" FontSize="22" VerticalContentAlignment="Center" KeyUp="Address_KeyUp"/>
        <Button Content="OK" Grid.Row="1" Grid.Column="1" Click="Button_Click"/>
    </Grid>
</Window>
